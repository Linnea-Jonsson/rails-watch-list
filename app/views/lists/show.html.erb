<h2> <%= @list.name %> </h2>

<p><%= render "bookmarks/form", bookmark: @bookmark %></p>

<p><%= cl_image_tag(@list.photo.key,
      width: 400, height: 300, crop: :fill) %></p>


  <% @list.bookmarks.each do |b| %>
    <p><%= b.movie.title %></p>
    <p><%= b.movie.overview %></p>
    <p><%= b.movie.poster_url %></p>
    <p><%= b.movie.rating %></p>
    <p><%= b.comment %></p>
    <p><%= link_to "Delete", bookmark_path(b), data: { turbo_method: :delete, turbo_confirm: "Sure?"} %></p>
  <% end %>
